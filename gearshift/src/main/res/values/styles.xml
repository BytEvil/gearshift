<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@color/material_blue_grey_800</item>
        <item name="colorControlHighlight">@color/control_highlight</item>
        <item name="colorControlActivated">@color/control_activated</item>
        <item name="colorSwitchThumbNormal">@android:color/white</item>
        <item name="actionBarStyle">@style/DefaultToolbar</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="AppTheme.NoBackground" parent="AppTheme">
        <item name="android:windowBackground">@null</item>
    </style>
    
    <style name="AppTheme.DialogNoTitle" parent="android:style/Theme.Holo.Dialog.MinWidth">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>
    
    <style name="AppTheme.CardsActivity" parent="AppTheme">
        <item name="android:windowBackground">@color/detail_background</item>
    </style>

    <style name="DefaultToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="TorrentTitle">
	   	<item name="android:paddingLeft">16dp</item>
	   	<item name="android:paddingRight">16dp</item>
	    <item name="android:paddingTop">8dp</item>
	    <item name="android:paddingBottom">0dp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
	    <item name="android:textColor">#333</item>
	    <item name="android:textSize">@dimen/torrent_list_name_text_size</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:gravity">center</item>
	    <item name="android:ellipsize">end</item>
	    <item name="android:shadowColor">#77000000</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">1</item>
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TorrentSubtitle">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#444</item>
        <item name="android:textSize">@dimen/torrent_list_status_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:shadowColor">#77000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardContainer">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
   	    <item name="android:layout_marginTop">0dp</item>
   	    <item name="android:layout_marginBottom">4dp</item>
        <item name="cardCornerRadius">2dp</item>
    </style>
        
    <style name="CardHeaderExpander">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">4dp</item>
   	    <item name="android:paddingLeft">16dp</item>
   	    <item name="android:paddingRight">16dp</item>
    </style>
    
    <style name="CardHeaderExpanderText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#900000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    
    <style name="CardHeaderExpanderImage">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">-32dp</item>
        <item name="android:background">@drawable/ic_section_expand</item>
    </style>
    
    <style name="CardHeaderExpanderImageCollapse" parent="@style/CardHeaderExpanderImage">
        <item name="android:background">@drawable/ic_section_collapse</item>
    </style>

    <style name="CardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">8dp</item>
   	    <item name="android:paddingLeft">16dp</item>
   	    <item name="android:paddingRight">16dp</item>
   	    <item name="android:shrinkColumns">1</item>
   	    <item name="android:stretchColumns">1</item>
    </style>
    
    <style name="CardContentCollapsed" parent="@style/CardContent">
        <item name="android:visibility">gone</item>
    </style>
    
    <style name="CardHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/border_bottom</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="CardEntry">
        <!-- <item name="android:clickable">true</item> -->
        <!-- <item name="android:background">@drawable/clickable_selector_holo_light</item> -->
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardButton">
        <item name="android:lines">1</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="CardTextColumn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SessionCardContainer" parent="CardContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TrackerButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="TrackerButtonSeparator">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@color/detail_background_edge</item>
    </style>

    <style name="TrackerInfoRow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
